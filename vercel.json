{
  "version": 2,
  "builds": [
    {
      "src": "food-analyzer-backend/dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "food-analyzer-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "food-analyzer-backend/dist/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "food-analyzer-frontend/dist/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json))",
      "dest": "food-analyzer-frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "food-analyzer-frontend/dist/index.html"
    }
  ]
}
