{
  "name": "alcalorieapp-monorepo",
  "version": "1.0.0",
  "description": "AI-powered food analysis application with frontend and backend",
  "private": true,
  "workspaces": [
    "food-analyzer-frontend",
    "food-analyzer-backend"
  ],
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd food-analyzer-backend && npm run build",
    "build:frontend": "cd food-analyzer-frontend && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd food-analyzer-backend && npm run dev",
    "dev:frontend": "cd food-analyzer-frontend && npm run dev",
    "install:all": "npm install && cd food-analyzer-backend && npm install && cd ../food-analyzer-frontend && npm install",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd food-analyzer-backend && npm run clean",
    "clean:frontend": "cd food-analyzer-frontend && rm -rf dist",
    "vercel-build": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ujjwal-sinha/AlCalorieApp.git"
  },
  "author": "Ujjwal Sinha",
  "license": "MIT"
}
